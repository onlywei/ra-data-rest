{
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true,
		"allowJs": false,

		"target": "ES5",
		"module": "commonjs",
		"lib": ["es2017", "dom"],

		"noImplicitAny": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"exclude": ["**/*.spec.ts", "**/*.spec.tsx", "**/*.spec.js"],
	"include": ["src"]
}
